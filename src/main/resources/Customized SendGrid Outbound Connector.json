{
  "$schema": "https://unpkg.com/@camunda/zeebe-element-templates-json-schema/resources/schema.json",
  "name": "Customized SendGrid Outbound Connector",
  "id": "78718414-e647-4789-baf7-76f7fd3bf015",
  "version": 1715072936747,
  "description": "Send an email via SendGrid",
  "documentationRef": "https://docs.camunda.io/docs/components/connectors/out-of-the-box-connectors/sendgrid/",
  "category": {
    "id": "connectors",
    "name": "Connectors"
  },
  "appliesTo": [
    "bpmn:Task"
  ],
  "elementType": {
    "value": "bpmn:ServiceTask"
  },
  "groups": [
    {
      "id": "authentication",
      "label": "Authentication"
    },
    {
      "id": "sender",
      "label": "Sender"
    },
    {
      "id": "receiver",
      "label": "Receiver"
    },
    {
      "id": "content",
      "label": "Compose email"
    },
    {
      "id": "output",
      "label": "Output mapping"
    },
    {
      "id": "error",
      "label": "Error handling"
    },
    {
      "id": "retries",
      "label": "Retries"
    }
  ],
  "properties": [
    {
      "value": "io.camunda:sendgrid:1",
      "binding": {
        "property": "type",
        "type": "zeebe:taskDefinition"
      },
      "type": "Hidden"
    },
    {
      "id": "apiKey",
      "label": "SendGrid API key",
      "value": "{{secrets.SENDGRID_APIKEY}}",
      "constraints": {
        "notEmpty": true
      },
      "group": "authentication",
      "binding": {
        "name": "apiKey",
        "type": "zeebe:input"
      },
      "type": "Hidden"
    },
    {
      "id": "from.name",
      "label": "Name",
      "optional": false,
      "constraints": {
        "notEmpty": true
      },
      "value": "Camunda Demo",
      "group": "sender",
      "binding": {
        "name": "from.name",
        "type": "zeebe:input"
      },
      "type": "Hidden"
    },
    {
      "id": "from.email",
      "label": "Email address",
      "optional": false,
      "constraints": {
        "notEmpty": true
      },
      "value": "demo@camunda.com",
      "group": "sender",
      "binding": {
        "name": "from.email",
        "type": "zeebe:input"
      },
      "type": "Hidden"
    },
    {
      "id": "to.name",
      "label": "Name",
      "optional": false,
      "constraints": {
        "notEmpty": true
      },
      "feel": "optional",
      "group": "receiver",
      "binding": {
        "name": "to.name",
        "type": "zeebe:input"
      },
      "type": "String"
    },
    {
      "id": "to.email",
      "label": "Email address",
      "optional": false,
      "constraints": {
        "notEmpty": true
      },
      "feel": "optional",
      "group": "receiver",
      "binding": {
        "name": "to.email",
        "type": "zeebe:input"
      },
      "type": "String"
    },
    {
      "id": "unMappedFieldNotUseInModel.mailType",
      "label": "Mail contents",
      "optional": false,
      "group": "content",
      "binding": {
        "name": "unMappedFieldNotUseInModel.mailType",
        "type": "zeebe:input"
      },
      "type": "Dropdown",
      "choices": [
        {
          "name": "Simple (no dynamic template)",
          "value": "mail"
        },
        {
          "name": "Using dynamic template",
          "value": "byTemplate"
        }
      ]
    },
    {
      "id": "template.id",
      "label": "Template ID",
      "optional": false,
      "constraints": {
        "notEmpty": true
      },
      "feel": "optional",
      "group": "content",
      "binding": {
        "name": "template.id",
        "type": "zeebe:input"
      },
      "condition": {
        "property": "unMappedFieldNotUseInModel.mailType",
        "equals": "byTemplate",
        "type": "simple"
      },
      "type": "String"
    },
    {
      "id": "template.data",
      "label": "Template data",
      "optional": false,
      "constraints": {
        "notEmpty": true
      },
      "feel": "required",
      "group": "content",
      "binding": {
        "name": "template.data",
        "type": "zeebe:input"
      },
      "condition": {
        "property": "unMappedFieldNotUseInModel.mailType",
        "equals": "byTemplate",
        "type": "simple"
      },
      "type": "String"
    },
    {
      "id": "content.subject",
      "label": "Subject",
      "optional": false,
      "constraints": {
        "notEmpty": true
      },
      "feel": "optional",
      "group": "content",
      "binding": {
        "name": "content.subject",
        "type": "zeebe:input"
      },
      "condition": {
        "property": "unMappedFieldNotUseInModel.mailType",
        "equals": "mail",
        "type": "simple"
      },
      "type": "String"
    },
    {
      "id": "content.type",
      "label": "Content type",
      "optional": false,
      "value": "text/plain",
      "constraints": {
        "notEmpty": true
      },
      "feel": "optional",
      "group": "content",
      "binding": {
        "name": "content.type",
        "type": "zeebe:input"
      },
      "condition": {
        "property": "unMappedFieldNotUseInModel.mailType",
        "equals": "mail",
        "type": "simple"
      },
      "type": "String"
    },
    {
      "id": "content.value",
      "label": "Body",
      "optional": false,
      "constraints": {
        "notEmpty": true
      },
      "feel": "optional",
      "group": "content",
      "binding": {
        "name": "content.value",
        "type": "zeebe:input"
      },
      "condition": {
        "property": "unMappedFieldNotUseInModel.mailType",
        "equals": "mail",
        "type": "simple"
      },
      "type": "Text"
    },
    {
      "id": "resultVariable",
      "label": "Result variable",
      "description": "Name of variable to store the response in",
      "group": "output",
      "binding": {
        "key": "resultVariable",
        "type": "zeebe:taskHeader"
      },
      "type": "Hidden"
    },
    {
      "id": "resultExpression",
      "label": "Result expression",
      "description": "Expression to map the response into process variables",
      "group": "output",
      "binding": {
        "key": "resultExpression",
        "type": "zeebe:taskHeader"
      },
      "type": "Hidden"
    },
    {
      "id": "errorExpression",
      "label": "Error expression",
      "description": "Expression to handle errors. Details in the <a href=\"https://docs.camunda.io/docs/components/connectors/use-connectors/\" target=\"_blank\">documentation</a>.",
      "group": "error",
      "binding": {
        "key": "errorExpression",
        "type": "zeebe:taskHeader"
      },
      "type": "Hidden"
    },
    {
      "id": "retryCount",
      "label": "Retries",
      "description": "Number of retries",
      "value": "3",
      "group": "retries",
      "binding": {
        "property": "retries",
        "type": "zeebe:taskDefinition"
      },
      "type": "Hidden"
    },
    {
      "id": "retryBackoff",
      "label": "Retry backoff",
      "description": "ISO-8601 duration to wait between retries",
      "value": "PT1S",
      "group": "retries",
      "binding": {
        "key": "retryBackoff",
        "type": "zeebe:taskHeader"
      },
      "type": "Hidden"
    }
  ],
  "icon": {
    "contents": "data:image/svg+xml;base64,"
  }
}